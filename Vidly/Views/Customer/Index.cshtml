@using System.Web.Mvc.Html
@model Vidly.ViewModels.RandomMovieViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@if (Model.Customers.Count==0)
{
    <h2>Sorry there are no customers yet</h2>
}
else
{
    <ul class="list-group">

        @foreach (var customer in Model.Customers)
        {

            <li class="list-group-item">@Html.ActionLink(customer.Name, "Details", "Customer", new { id = customer.Id }, null)</li>

        }
    </ul>
}

